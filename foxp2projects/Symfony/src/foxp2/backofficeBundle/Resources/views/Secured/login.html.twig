{% extends "foxp2backofficeBundle:Common:layout_admin.html.twig" %}
{% block body %}
<body>
    <div class="container-fluid" style="height:100%;background-image: url({{ asset("bundles/foxp2backoffice/images/bkg-win8-2.jpg") }});background-position: top right;background-color:#018298;">
{% block application %}
       <div id="form-login">        
            <form class="form-horizontal" action="{{ path("login_check") }}" method="post" id="login">
                <h2 class="text-center"><strong>Zone sécurisée</strong></h2>
                <hr>
    {% if error %}
                <div id="errors" class="text-info text-center well"><strong>{{ error.message }}</strong></div>
    {% endif %}  
                <div class="control-group">
                    <label class="control-label" for="inputUsername">Pseudo</label>
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-user-7"></i></span>
                        <input required type="text" id="inputUsername" name="_username" placeholder="admin" value="{{ last_username }}" />
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputPassword">Mot de passe</label>
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-lock"></i></span>
                        <input required type="password" id="inputPassword" name="_password" placeholder="123456" />
                        </div>
                    </div>
                </div>
               
                    <div class="clearfix">
                        <input type="reset" name="reset" class="btn" value="effacer">
                        <button type="submit" class="btn pull-right"><i class="icon-checkmark"></i> valider</button>
                    </div>
               
            </form>
        </div>
        <script>$('input[name="reset"]').click(function(){$('#errors').hide(); $('#inputUsername').val('');return false;});</script>
{% endblock %}
        </div>
    </body>
{% endblock %}