{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Articles list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Articlename</th>
                <th>Articletitle</th>
                <th>Articlesubtitle</th>
                <th>Articleshortdescription</th>
                <th>Articlelongdescription</th>
                <th>Articledatecreated</th>
                <th>Articledatemodified</th>
                <th>Articlegistreference</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('articles_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.articleName }}</td>
                <td>{{ entity.articleTitle }}</td>
                <td>{{ entity.articleSubTitle }}</td>
                <td>{{ entity.articleShortDescription }}</td>
                <td>{{ entity.articleLongDescription }}</td>
                <td>{% if entity.articleDateCreated %}{{ entity.articleDateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.articleDateModified %}{{ entity.articleDateModified|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.articleGistReference }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('articles_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('articles_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('articles_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
